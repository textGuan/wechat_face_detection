.pages{background: #c9d0d8}
.face{background: white;height: 500rpx;margin:0 35rpx;text-align: center;
     overflow:hidden;}
.face image{width: 500rpx; height: 500rpx;}

.result{background: white;padding: 25rpx;}
.result-text{font-size: 30rpx;color: rgba(128, 128, 128, 0.377);}

.from{display: flex;padding: 23rpx 25rpx;}
.from text{font-size: 30rpx; margin-right: 20rpx;}
.from:nth-child(odd){background:#f1f3f3;}

.btn{position: border;bottom:5rpx;width: 100%;}
.btn button{width:450rpx;border-radius: 70rpx;}

.animation{position: fixed;
    top:0;
    left: 0;
    right: 0;
    height: 500rpx;}
.animation-list{width: 100%;
                height: 450rpx;
                background: linear-gradient(to bottom,rgba(43, 158, 252, 0),rgba(43, 158, 252, 0.25));
                position: relative;
                top: -600rpx;
                animation: myfirst 0.7s linear 0.7s infinite alternate;
                }

@keyframes myfirst
{
  0%{background: linear-gradient(to bottom,rgba(43, 158, 252, 0),rgba(43, 158, 252, 0.25));
    left: 0; top: -600rpx;}
  25%{left: 0;top:50rpx;}
  50%{left: 0;top:50rpx;}
  75%{left: 0;top:50rpx;}
  100%{left: 0;top:-600rpx;}
}